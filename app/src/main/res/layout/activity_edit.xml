<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="20dp"
    tools:context=".activity.EditActivity">

    <Button
        android:id="@+id/btn_savealltime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:text="@string/saveall"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_savealltime">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alarm1"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_alarm1Hour"
                style="@style/TimeEdit"
                android:layout_marginTop="10dp"
                android:hint="小时"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/et_alarm1Minute"
                style="@style/TimeEdit"
                android:layout_marginTop="10dp"
                android:hint="分钟"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/alarm2"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_alarm2Hour"
                style="@style/TimeEdit"
                android:layout_marginTop="10dp"
                android:hint="小时" />

            <EditText
                android:id="@+id/et_alarm2Minute"
                style="@style/TimeEdit"
                android:layout_marginTop="10dp"
                android:hint="分钟" />

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/alarm3"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_alarm3Hour"
                style="@style/TimeEdit"
                android:layout_marginTop="10dp"
                android:hint="小时" />

            <EditText
                android:id="@+id/et_alarm3Minute"
                style="@style/TimeEdit"
                android:layout_marginTop="10dp"
                android:hint="分钟" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>